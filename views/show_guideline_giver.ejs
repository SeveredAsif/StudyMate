<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guideline Giver list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #e6e1db;
            color: #343a40;
            font-weight: bold;
        }

        .card-body {
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: .25rem;
            padding: 10px;
        }

        .teacher {
            font-weight: bold;
        }

        .send-request-btn {
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .send-request-btn.normal {
            background-color: green;
            color: #fff;
            border: none;
        }

        .send-request-btn.request-sent {
            background-color: gray;
            cursor: default;
        }

        .msg-icon {
            color: cornflowerblue;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>All guideline givers</h1>

        <div class="row">
            <% for (let i=0; i < guidelineGivers.length; i++) { %>
                <div class="col-md-4">
                    <div class="card">
                       
                        <div class="card-header">
                            <%= guidelineGivers[i].first_name +' '+ guidelineGivers[i].last_name%>
                        </div>
                        <div class="card-body">
                            <div class="card-header">
                                Guideline Giver's Id : <%= guidelineGivers[i].guideline_giver_id%>
                            </div>
                            <br><br>
                            <div class="teacher">
                                Guideline Giver's University :<%= guidelineGivers[i].university%>
                            </div>
                            <br>
                                Guideline Giver's Phone no :<%= guidelineGivers[i].phone_no%>
                                <br><br>   
                            <div class="text-center">
                                <% if (isgg === guidelineGivers[i].guideline_giver_id) { %>
                                    <p style="background-color: cornflowerblue;">You are also a guideline giver</p>
                                <% } else { %>
                                    <% if (sendrequest.length > 0) { %>
                                        <% let requestSent = false; %>
                                        <% for (let j=0; j < sendrequest.length; j++) { %>
                                            <% if (guidelineGivers[i].guideline_giver_id === sendrequest[j].guideline_giver_id) { %>
                                                <% if (sendrequest[j].isadded === 'false') { %>
                                                    <button id="sendBtn_<%= guidelineGivers[i].guideline_giver_id %>"
                                                        class="send-request-btn request-sent" disabled>Request Sent</button>
                                                    <% requestSent = true; %>
                                                <% } else if (sendrequest[j].isadded === 'accepted') { %>
                                         
                                            <!-- Inside the card-body where the message icon is -->
                                                <button class="send-request-btn normal" onclick="openChat('<%= guidelineGivers[i].guideline_giver_id %>')">
                                                    <i class="fas fa-envelope"></i>
                                                </button>

                                                    <% requestSent = true; %>
                                                <% } %>
                                            <% } %>
                                        <% } %>
                                        <% if (!requestSent) { %>
                                            <button id="sendBtn_<%= guidelineGivers[i].guideline_giver_id %>"
                                                class="send-request-btn normal"
                                                onclick="sendRequest(this, <%= JSON.stringify(guidelineGivers[i]) %>)">Send Request</button>
                                        <% } %>
                                    <% } else { %>
                                        <button id="sendBtn_<%= guidelineGivers[i].guideline_giver_id %>"
                                            class="send-request-btn normal"
                                            onclick="sendRequest(this, <%= JSON.stringify(guidelineGivers[i]) %>)">Send Request</button>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <button> <a href="/student/dashboard"> Back </a></button>
    </div>

    <script>
        function sendRequest(button, guidelineGiver) {
            console.log('send request');
            console.log(guidelineGiver);
            const request = new XMLHttpRequest();
            request.open('POST', '/send-request'); // Modify the URL according to your backend API
            request.setRequestHeader('Content-Type', 'application/json');
            request.onreadystatechange = function () {
               
                        if (request.readyState === 4 && request.status === 200) {
                        button.classList.remove('normal');
                        button.classList.add('request-sent');
                        button.innerHTML = 'Request Sent';
                        button.disabled = true;
                    }

                
            };
            request.send(JSON.stringify(guidelineGiver));
        }
// Function to open the chat section
                    function openChat(guidelineGiverId) {
                        // You can pass the guidelineGiverId to identify the recipient
                        // Here you can toggle the visibility of the chat section or open a modal
                        // For example:
                        window.location.href = '/student/message?guidelineGiverId=' + guidelineGiverId;
                    }

       

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
</body>

</html>






