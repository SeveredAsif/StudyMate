<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam Section</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        /* Add your custom styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 20px;
        }

        .navbar {
            background-color: #007bff;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #fff;
            font-weight: bold;
        }

        .jumbotron {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .jumbotron h1 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 5px;
        }

        .dropdown-menu {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Exam Section</a>
            <!-- Toggle Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/student/dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/exam_section/result">Result</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/exam_section/results">Progress</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            More Options
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Practice Tests</a></li>
                            <li><a class="dropdown-item" href="#">Exam Schedule</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Help & Support</a></li>
                        </ul>
                    </li>
                </ul>

                <!-- Search Form -->
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Jumbotron -->
    <div class="container mt-5">
        <div class="jumbotron mb-4">
            <h1>Welcome to the Exam Section!</h1>
            <p>Prepare for your exams, view results, and more.</p>
        </div>


    <!-- Exam List -->
<div class="row">
    <% courses.forEach(course => { %>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title"><%= course.course_title %></h5>
                    <p class="card-text"><%= course.course_description %></p>
                    <a href="/student/exam-section/<%= course.id %>/" class="btn btn-primary">Take Exam</a>
                </div>
            </div>
        </div>
    <% }); %>
</div>



    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Embedded JavaScript to fetch exams for enrolled courses -->
    <script>
        // Fetch exams for enrolled courses
        // Replace this with actual AJAX call to fetch exams for enrolled courses
        // Dummy data for demonstration purposes
        var exams = [
            { exam_topic: 'Mathematics Exam' },
            { exam_topic: 'Physics Exam' },
            { exam_topic: 'Biology Exam' },
            { exam_topic: 'Chemistry Exam' },
            { exam_topic: 'History Exam' }
        ];

        // Rendering exams
        var examList = document.querySelector('.list-group');
        exams.forEach(exam => {
            var listItem = document.createElement('li');
            listItem.classList.add('list-group-item');
            listItem.textContent = exam.exam_topic;
            examList.appendChild(listItem);
        });
    </script>
</body>

</html>
