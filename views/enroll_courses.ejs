<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enroll Courses</title>
    <!-- Add Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <style>
      /* Custom styles for better UI */
      body {
        font-family: Arial, sans-serif;
        background-color: #dce3eb;
        padding: 20px;
      }

      h1,
      h2,
      h3 {
        color: #343a40;
      }

      .course {
        border: 1px solid #ced4da;
        border-radius: 5px;
        margin-bottom: 20px;
        overflow: hidden;
      }

      .course:hover {
        box-shadow: 0 0 11px rgba(33, 33, 33, 0.2);
      }

      .course-body {
        padding: 20px;
      }

      .course-title {
        margin-bottom: 10px;
      }

      .course-description {
        margin-bottom: 10px;
      }

      .author {
        color: #6c757d;
      }

      .add-button {
        margin-top: 10px;
        padding: 5px 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        background-color: green;
        color: #fff;
      }

      .add-button.added {
        background-color: #6c757d;
        cursor: default;
      }

      .add-button:hover {
        background-color: darkgreen;
      }

      .add-button.added:hover {
        background-color: #6c757d;
      }

      /* Add margin to the top of the course container */
      .course-container {
        margin-top: 50px;
      }
    </style>

    <style>
      /* Custom styles for the navbar */
      .navbar {
        background-color: #007bff; /* Navbar background color */
      }

      .navbar-brand {
        color: #fff; /* Navbar brand text color */
        font-weight: bold; /* Navbar brand font weight */
      }

      .navbar-nav .nav-link {
        color: #fff; /* Navbar links text color */
        font-weight: bold; /* Navbar links font weight */
      }

      .navbar-toggler {
        border-color: #fff; /* Navbar toggler border color */
      }

      .navbar-toggler-icon {
        background-color: #fff; /* Navbar toggler icon color */
      }

      .navbar-nav .nav-item.active .nav-link,
      .navbar-nav .nav-link.active,
      .navbar-nav .nav-link.show,
      .navbar-nav .show > .nav-link {
        background-color: rgba(
          255,
          255,
          255,
          0.1
        ); /* Navbar active link background color */
      }

      .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
        display: block; /* Show dropdown menu on hover */
      }

      .dropdown-menu {
        background-color: #007bff; /* Dropdown menu background color */
        border: none; /* Remove dropdown menu border */
      }

      .dropdown-item {
        color: #fff; /* Dropdown item text color */
      }

      .dropdown-item:hover {
        background-color: rgba(
          255,
          255,
          255,
          0.1
        ); /* Dropdown item background color on hover */
      }

      .dropdown-menu {
        border-radius: 5px; /* Dropdown menu border radius */
      }

      /* Add margin to the top of the course container */
      .course-container {
        margin-top: 50px;
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #dce3eb;
        padding: 20px;
        padding-top: 70px; /* Add padding equal to the height of the navbar */
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Student Dashboard</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/student/dashboard"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/student/enroll-courses"
                >Enroll Courses</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/student/course-lists">Course Lists</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                More Options
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a class="dropdown-item" href="/student/exam-section"
                    >Exam Section</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="/student/mythingstodo"
                    >My Things To Do</a
                  >
                </li>
              </ul>
            </li>
          </ul>
          <button class="btn btn-danger" onclick="logout()">Logout</button>
        </div>
      </div>
    </nav>

    <h1>Enroll Courses</h1>

    <!-- Add margin to the top of the container -->
    <div class="container course-container">
      <div class="row">
        <!-- Iterate through enrolled courses and display course cards with appropriate buttons -->
        <% courses.forEach(course=> { %>
        <div class="col-md-4">
          <div class="course">
            <div class="course-body">
              <h3 class="course-title"><%= course.course_title %></h3>
              <p class="course-description">
                <strong>Description:</strong>
                <%= course.course_description %><br />
                <strong class="author">Author:</strong>
                <%= course.course_creator %>
              </p>
              <% const enrolledCourse=enrolledCourses.find(enrolledCourse=>
              enrolledCourse.id === course.id); %> <% if (enrolledCourse) { %>
              <button class="add-button added btn btn-secondary" disabled>
                Added
              </button>
              <% } else { %>
              <button
                class="add-button btn btn-success"
                data-course-id="<%= course.id %>"
              >
                Add
              </button>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <!-- Bootstrap JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const addButtons = document.querySelectorAll(".add-button");
        addButtons.forEach((button) => {
          button.addEventListener("click", async function () {
            const courseId = this.getAttribute("data-course-id");
            const addButton = this;

            try {
              const response = await fetch("/student/enroll-courses", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({ courseId: courseId }),
              });

              if (response.ok) {
                // If course is successfully added, change button appearance
                addButton.classList.add("added");
                addButton.innerText = "Added";
                addButton.disabled = true;
                console.log(`Course with ID ${courseId} added.`);
              } else {
                console.error("Failed to add course.");
              }
            } catch (error) {
              console.error(error);
            }
          });
        });
      });
    </script>
  </body>
</html>
