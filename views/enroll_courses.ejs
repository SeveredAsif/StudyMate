<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enroll Courses</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Custom styles for better UI */
        body {
            font-family: Arial, sans-serif;
            background-color: #dce3eb;
            padding: 20px;
        }

        h1,
        h2,
        h3 {
            color: #343a40;
        }

        .course {
            border: 1px solid #ced4da;
            border-radius: 5px;
            margin-bottom: 20px;
            overflow: hidden;
        }

        .course:hover {
            box-shadow: 0 0 11px rgba(33, 33, 33, 0.2);
        }

        .course-body {
            padding: 20px;
        }

        .course-title {
            margin-bottom: 10px;
        }

        .course-description {
            margin-bottom: 10px;
        }

        .author {
            color: #6c757d;
        }

        .add-button {
            margin-top: 10px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: green;
            color: #fff;
        }

        .add-button.added {
            background-color: #6c757d;
            cursor: default;
        }

        .add-button:hover {
            background-color: darkgreen;
        }

        .add-button.added:hover {
            background-color: #6c757d;
        }
    </style>
</head>

<body>
    <h1>Enroll Courses</h1>

    <!-- Iterate through courses and display course cards with Add button -->
    <div class="container">
        <div class="row">
            <!-- Iterate through enrolled courses and display course cards with appropriate buttons -->
            <% courses.forEach(course=> { %>
                <div class="col-md-4">
                    <div class="course">
                        <div class="course-body">
                            <h3 class="course-title">
                                <%= course.course_title %>
                            </h3>
                            <p class="course-description">
                                <strong>Description:</strong>
                                <%= course.course_description %><br>
                                <strong class="author">Author:</strong>
                                <%= course.course_creator %>
                            </p>
                            <% const enrolledCourse=enrolledCourses.find(enrolledCourse=> enrolledCourse.id === course.id); %>
                                <% if (enrolledCourse) { %>
                                    <button class="add-button added btn btn-secondary" disabled>Added</button>
                                <% } else { %>
                                    <button class="add-button btn btn-success" data-course-id="<%= course.id %>">Add</button>
                                <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>

        </div>
    </div>

    <!-- Bootstrap JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const addButtons = document.querySelectorAll('.add-button');
            addButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const courseId = this.getAttribute('data-course-id');
                    const addButton = this;

                    try {
                        const response = await fetch('/student/enroll-courses', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ courseId: courseId })
                        });

                        if (response.ok) {
                            // If course is successfully added, change button appearance
                            addButton.classList.add('added');
                            addButton.innerText = 'Added';
                            addButton.disabled = true;
                            console.log(`Course with ID ${courseId} added.`);
                        } else {
                            console.error('Failed to add course.');
                        }
                    } catch (error) {
                        console.error(error);
                    }
                });
            });
        });
    </script>
</body>

</html>
