<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enroll Courses</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Custom styles for better UI */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1, h2, h3 {
            color: #343a40;
        }

        .course {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #ced4da;
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 5px;
            cursor: pointer;
        }

        .course-description {
            display: none;
        }

        .add-button {
            margin-left: 10px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: green;
            color: #fff;
        }

        .add-button:hover {
            background-color: darkgreen;
        }

        .added-course {
            border: 1px solid #007bff;
            padding: 10px;
            margin-top: 20px;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <h1>Enroll Courses</h1>

    <!-- Iterate through courses and display course titles -->
    <% courses.forEach(course=> { %>
    <div class="course" onclick="toggleDescription('<%= course.id %>')">
        <div>
            <h3><%= course.course_title %></h3>
            <p class="course-description" id="description<%= course.id %>">
                <strong>Description:</strong> <%= course.course_description %><br>
                <strong>Author:</strong> <%= course.course_creator %>
            </p>
        </div>
        <button class="add-button" onclick="addCourse('<%= course.id %>')">Add</button>
    </div>
    <% }) %>

    <!-- Added Courses Section -->
    <div class="added-course" id="addedCoursesSection">
        <h2>Added Courses</h2>
        <!-- Added courses will be displayed here -->
    </div>

    <!-- Bootstrap JavaScript and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <script>
        // Pass courses data from server to client-side JavaScript
        const coursesData = `<%- JSON.stringify(courses).replace(/\\/g, '\\\\').replace(/'/g, "\\'") %>`;
        async function isCourseAlreadyAdded(courseId) {
                    const response = await fetch(`/student/is-course-added/${courseId}`); // Replace with your actual endpoint
                    const result = await response.json();
                    return result.isAdded;
                }        
        // Function to toggle course description and author
        function toggleDescription(courseId) {
            const descriptionElement = document.getElementById(`description${courseId}`);
            descriptionElement.style.display = (descriptionElement.style.display === 'none' || descriptionElement.style.display === '') ? 'block' : 'none';
        }
        
        // Function to check if a course exists
        async function checkCourseExistence(courseId) {
            return new Promise((resolve, reject) => {
                const xhr = new XMLHttpRequest();
                xhr.open('GET', `/student/is-course-added/${courseId}`);
                xhr.setRequestHeader('Content-Type', 'application/json');

                xhr.onload = () => {
                    if (xhr.status === 200) {
                        const response = JSON.parse(xhr.responseText);
                        resolve(response.isAdded);
                    } else {
                        reject(new Error('Failed to check course existence'));
                    }
                };

                xhr.onerror = () => {
                    reject(new Error('Failed to check course existence'));
                };

                xhr.send();
            });
        }

        // Function to add a course
        async function addCourse(courseId) {
            const addedCoursesSection = document.getElementById('addedCoursesSection');
            const courseExists = await checkCourseExistence(courseId);

            if (!courseExists) {
                const selectedCourse = JSON.parse(coursesData).find(course => course.id === parseInt(courseId));

                if (selectedCourse) {
                    // Create a new div element for the added course
                    const addedCourseDiv = document.createElement('div');
                    addedCourseDiv.classList.add('course');
                    addedCourseDiv.innerHTML = `
                        <div>
                            <h3>${selectedCourse.course_title}</h3>
                            <p class="course-description">
                                <strong>Description:</strong> ${selectedCourse.course_description}<br>
                                <strong>Author:</strong> ${selectedCourse.course_creator}
                            </p>
                        </div>
                    `;

                    // Append the added course div to the added courses section
                    addedCoursesSection.appendChild(addedCourseDiv);

                    const descriptionElement = document.getElementById(`description${courseId}`);
                    descriptionElement.style.display = 'none';

                    // Send course ID to app.js using AJAX
                    const xhr = new XMLHttpRequest();
                    xhr.open('POST', '/student/enroll-courses'); // Change the URL to the appropriate endpoint in app.js
                    xhr.setRequestHeader('Content-Type', 'application/json');
                    xhr.send(JSON.stringify({ courseId: parseInt(courseId) }));
                }
            } else {
                alert('Course already added.');
            }
        }
    </script>
</body>

</html>
