<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Enroll Courses</title>
    <!-- Add any additional styling or links here -->
    <style>
        /* Additional CSS styles for better UI */
        .course {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid #ced4da;
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 5px;
            cursor: pointer;
        }

        .course-description {
            display: none;
        }

        .add-button {
            margin-left: 10px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: green;
        }

        .added-course {
            border: 1px solid #007bff;
            padding: 10px;
            margin-top: 10px;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <h1>Enroll Courses</h1>

    <!-- Iterate through courses and display course titles -->
    <% courses.forEach(course=> { %>
    <div class="course" onclick="toggleDescription('<%= course.id %>')">
        <div>
            <h3>
                <%= course.course_title %>
            </h3>
            <p class="course-description" id="description<%= course.id %>">
                <strong>Description:</strong>
                <%= course.course_description %><br>
                <strong>Author:</strong>
                <%= course.course_creator %>
            </p>
        </div>
        <button class="add-button" onclick="addCourse('<%= course.id %>')">Add</button>
    </div>
    <% }) %>

    <!-- Added Courses Section -->
    <div class="added-course" id="addedCoursesSection">
        <h2>Added Courses</h2>
        <!-- Added courses will be displayed here -->
    </div>

<script>
    // Pass courses data from server to client-side JavaScript
    const coursesData = '<%- JSON.stringify(courses) %>';

    // Function to toggle course description and author
    function toggleDescription(courseId) {
        const descriptionElement = document.getElementById(`description${courseId}`);
        descriptionElement.style.display = (descriptionElement.style.display === 'none' || descriptionElement.style.display === '') ? 'block' : 'none';
    }

    // Function to add a course
    function addCourse(courseId) {
        const addedCoursesSection = document.getElementById('addedCoursesSection');
        const selectedCourse = JSON.parse(coursesData).find(course => course.id === parseInt(courseId));

        if (selectedCourse) {
            // Create a new div element for the added course
            const addedCourseDiv = document.createElement('div');
            addedCourseDiv.classList.add('course');

            // Set the content of the added course div
            addedCourseDiv.innerHTML = `
                <div>
                    <h3>${selectedCourse.course_title}</h3>
                    <p class="course-description">
                        <strong>Description:</strong> ${selectedCourse.course_description}<br>
                        <strong>Author:</strong> ${selectedCourse.course_creator}
                    </p>
                </div>
            `;

            // Append the added course div to the added courses section
            addedCoursesSection.appendChild(addedCourseDiv);

            const descriptionElement = document.getElementById(`description${courseId}`);
            descriptionElement.style.display = 'none';
        }
    }
</script>

</body>

</html>
