<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Study Hour Tracker</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .navbar {
            border-radius: 5px;
        }

        .navbar-brand,
        .nav-link {
            color: #fff !important;
        }

        .container1 {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 10vh;
        }
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            margin-top: 100;
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #343a40;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .btn-primary {
            width: 100%;
            margin-top: 20px;
        }

        .alert {
            margin-top: 10px;
            display: none;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container1">
            <a class="navbar-brand" href="#">Student Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/student/dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/student/routine">Add Task</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/student/current_routine">Current Routine</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link active" href="/student/track_study_hour">Tracking Study Hour</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/progress">Progress of Study</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="form-container">
            <h2>Track Study Hours</h2>
            <form action="/startTimer" method="post" onsubmit="return validateForm()">
                <div class="form-group">
                    <label for="date">Date:</label>
                    <input type="date" class="form-control" id="date" name="date" required>
                </div>
                <div class="form-group">
                    <label for="targetHours">Target Study Hours:</label>
                    <input type="number" class="form-control" id="targetHours" name="targetHours" min="0" max="24"
                        required>
                    <div id="targetHoursAlert" class="alert alert-danger" style="display: none;">
                        Target study hours cannot be 0 or less than 0 or more than 24.
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Start Timer</button>
            </form>
        </div>
    </div>

    <script>
        function validateForm() {
            const targetHours = document.getElementById('targetHours').value;
            const targetHoursAlert = document.getElementById('targetHoursAlert');

            if (parseInt(targetHours) <= 0 || parseInt(targetHours) > 24) {
                targetHoursAlert.style.display = 'block';
                return false; // Prevent form submission
            } else {
                targetHoursAlert.style.display = 'none';
                return true; // Allow form submission
            }
        }
    </script>

</body>

</html>

