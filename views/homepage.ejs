            <a class="navbar-brand" href="#">STUDYMATE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/login" id="login-link">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registration">Registration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="jumbotron">
            <h1>Welcome to <span id="dynamic-text"></span></h1>
            <h2><span id="dynamic-text2"></span></h2>
            <p>Your ultimate destination for learning and success</p>
        </div>
    </div>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="public/homepage.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="public/homepage2.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="public/homepage3.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <br><br><br>

    <div class="video-container">
        <video width="640" height="360" controls>
            <source src="uploads/homepage.mkv" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="container card-container">
        <div class="card">
            <img src="public/teacher.jpg" class="card-img-top" alt="Teacher">
            <div class="card-body">
                <h5 class="card-title">TEACHERS</h5>
                <p class="card-text">Explore our experienced and relevant teachers.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/course.jpg" class="card-img-top" alt="Course">
            <div class="card-body">
                <h5 class="card-title">COURSES</h5>
                <p class="card-text">Discover our wide range of helpful courses.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/lecture.jpg" class="card-img-top" alt="Lecture">
            <div class="card-body">
                <h5 class="card-title">LECTURES</h5>
                <p class="card-text">Access quick example lectures to strengthen your skills.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/exam.jpg" class="card-img-top" alt="Explore">
            <div class="card-body">
                <h5 class="card-title">EXPLORE</h5>
                <p class="card-text">Prepare for exams with our extensive question bank.</p>
            </div>
        </div>
    </div>

    <script>
        const text = "STUDYMATE";
        const text2 = "Learn, Connect, Succeed";

        // Delay between each letter (in milliseconds)
        const delay = 100;

        // Get the span element where the text will be displayed
        const dynamicText = document.getElementById("dynamic-text");
        const dynamicText2 = document.getElementById("dynamic-text2");

        // Initialize an index to keep track of the current letter being displayed
        let index = 0;
        let index2 = 0;

        // Function to display the text letter by letter
        function displayText() {
            // Check if all letters have been displayed
            if (index < text.length) {
                // Add the next letter to the dynamicText element
                dynamicText.textContent += text.charAt(index);
                // Move to the next letter
                index++;
                // Call the function recursively after the specified delay
                setTimeout(displayText, delay);
            }
        }

        function displayText2() {
            // Check if all letters have been displayed
            if (index2 < text2.length) {
                // Add the next letter to the dynamicText element
                dynamicText2.textContent += text2.charAt(index2);
                // Move to the next letter
                index2++;
                // Call the function recursively after the specified delay
                setTimeout(displayText2, delay);
            }
        }

        // Start displaying the text
        displayText();
        setTimeout(displayText2, text.length * delay);

        // Add event listener to the login link
        const loginLink = document.getElementById('login-link');
        loginLink.addEventListener('click', function () {
            // Show the login modal
            const loginModal = new bootstrap.Modal(document.getElementById('loginModal'), {
                keyboard: false
            });
            loginModal.show();
        });

        // Handle login Yes button click
        const loginYesBtn = document.getElementById('loginYesBtn');
        loginYesBtn.addEventListener('click', function () {
            // Redirect to login page
            // You can replace '#' with your actual login page URL
            window.location.href = 'login'; // Replace '#' with your actual login page URL
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
