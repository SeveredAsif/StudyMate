        .video-container {
            display: flex;
            justify-content: center;
            margin-top: 40px; /* Adjust margin as needed */
        }

        video {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <ul class="nav justify-content-end">
