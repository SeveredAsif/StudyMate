<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STUDYMATE - Learn, Connect, Succeed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        /* Custom styles specific to this page */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e5ecf4;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .navbar {
            background-color: #343a40 !important;
        }

        .navbar-brand {
            color: #fff;
            font-weight: bold;
        }

        .nav-link {
            color: #fff;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        .jumbotron {
            background-image: url('public/background.jpg');
            color: #ffffff;
            padding: 100px 20px;
            margin-bottom: 40px;
        }

        .btn-primary {
            background-color: #28a745;
            border: none;
            border-radius: 5px;
            padding: 10px 30px;
            font-size: 1.1em;
            color: #ffffff;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .btn-primary:hover {
            background-color: #218838;
        }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .card {
            flex: 1;
            max-width: 18rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .card-img-top {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            color: #343a40;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .card-text {
            color: #6c757d;
        }

        .video-container {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
        }

        video {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">STUDYMATE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="login-link">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registration">Registration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Do you have an account?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>If you have an account, click "Yes" to log in, otherwise click "No" to register.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="loginYesBtn">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="jumbotron">
            <h1>Welcome to <span id="dynamic-text"></span></h1>
            <br><br>
            <h2><span id="dynamic-text2"></span></h2>
            <br><br><br>
            <p>Your ultimate destination for learning and success</p>
            <br><br>
        </div>
    </div>

    <div class="video-container">
        <video width="640" height="360" controls>
            <source src="uploads/homepage.mkv" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="container card-container">
        <div class="card">
            <img src="public/teacher.jpg" class="card-img-top" alt="Teacher">
            <div class="card-body">
                <h5 class="card-title">TEACHERS</h5>
                <p class="card-text">Explore our experienced and relevant teachers.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/course.jpg" class="card-img-top" alt="Course">
            <div class="card-body">
                <h5 class="card-title">COURSES</h5>
                <p class="card-text">Discover our wide range of helpful courses.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/lecture.jpg" class="card-img-top" alt="Lecture">
            <div class="card-body">
                <h5 class="card-title">LECTURES</h5>
                <p class="card-text">Access quick example lectures to strengthen your skills.</p>
            </div>
        </div>
        <div class="card">
            <img src="public/exam.jpg" class="card-img-top" alt="Explore">
            <div class="card-body">
                <h5 class="card-title">EXPLORE</h5>
                <p class="card-text">Prepare for exams with our extensive question bank.</p>
            </div>
        </div>
    </div>

    <script>
        const text = "STUDYMATE";
        const text2 = "Learn, Connect, Succeed";

        // Delay between each letter (in milliseconds)
        const delay = 100;

        // Get the span element where the text will be displayed
        const dynamicText = document.getElementById("dynamic-text");
        const dynamicText2 = document.getElementById("dynamic-text2");

        // Initialize an index to keep track of the current letter being displayed
        let index = 0;
        let index2 = 0;

        // Function to display the text letter by letter
        function displayText() {
            // Check if all letters have been displayed
            if (index < text.length) {
                // Add the next letter to the dynamicText element
                dynamicText.textContent += text.charAt(index);
                // Move to the next letter
                index++;
                // Call the function recursively after the specified delay
                setTimeout(displayText, delay);
            }
        }

        function displayText2() {
            // Check if all letters have been displayed
            if (index2 < text2.length) {
                // Add the next letter to the dynamicText element
                dynamicText2.textContent += text2.charAt(index2);
                // Move to the next letter
                index2++;
                // Call the function recursively after the specified delay
                setTimeout(displayText2, delay);
            }
        }

        // Start displaying the text
        displayText();
        setTimeout(displayText2, text.length * delay);

        // Add event listener to the login link
        const loginLink = document.getElementById('login-link');
        loginLink.addEventListener('click', function () {
            // Show the login modal
            const loginModal = new bootstrap.Modal(document.getElementById('loginModal'), {
                keyboard: false
            });
            loginModal.show();
        });

        // Handle login Yes button click
        const loginYesBtn = document.getElementById('loginYesBtn');
        loginYesBtn.addEventListener('click', function () {
            // Redirect to login page
            // You can replace '#' with your actual login page URL
            window.location.href = 'login'; // Replace '#' with your actual login page URL
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>

