<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STUDYMATE - Learn, Connect, Succeed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        /* Custom styles specific to this page */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
            /* To prevent horizontal scrolling */
        }

        .background {
            background-image: url('public/background.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            filter: blur(5px);

            -webkit-filter: blur(5px);

            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .foreground {
            position: relative;
            z-index: 1;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);

        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff;

        }

        .navbar-nav .nav-link:hover {
            color: #aaaaaa;

        }

        .jumbotron {
            background-color: rgba(0, 0, 0, 0.5);
            color: #ffffff;
            padding: 100px 20px;
            margin-bottom: 40px;
        }

        .jumbotron h1,
        .jumbotron h2 {
            margin-bottom: 30px;
        }

        .jumbotron p {
            margin-bottom: 50px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
        }

        .video-container {
            display: flex;
            justify-content: center;
            margin-bottom: 40px;
        }

        video {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }

        .card-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .card {
            flex: 1;
            max-width: 18rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .card-img-top {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            color: #343a40;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .card-text {
            color: #6c757d;
        }


        .carousel-item img {
            max-width: 1000px;
            /* Adjust the max-width as needed */
            height: 500px;
            border-radius: 10px;
            margin: auto;
            /* Center the image */
        }

        .student_card_container {
            overflow-x: auto;
            /* Enable horizontal scrolling */
            white-space: nowrap;
            /* Prevent line breaks */
            padding-bottom: 20px;
            /* Add some bottom padding for better spacing */
        }

        .student-grid-wrapper {
            display: flex;
            /* Display rows side by side */
            overflow-x: auto;
            /* Enable horizontal scrolling */
            padding-bottom: 20px;
            /* Add some bottom padding for better spacing */
        }

        .student-grid-container {
            display: flex;
            /* Display cards inline */
            gap: 20px;
            /* Adjust the gap between cards */
        }




        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            border: none;
            border-radius: 15px;
            transition: transform 0.3s;
            display: inline-block;
            /* Display cards inline */
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .circle-img {
            width: 150px;
            height: 150px;
            overflow: hidden;
            border-radius: 50%;
            margin: 0 auto 10px;
        }

        .circle-img img {
            width: 100%;
            height: auto;
        }

        .card-title {
            color: #343a40;
            font-weight: bold;
            margin-bottom: 0;
        }
    </style>
</head>

<body>

    <div class="background"></div>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">STUDYMATE</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">

                        <a class="nav-link" href="#" id="login-link">Log in</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/registration">Registration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="jumbotron">
            <h1>Welcome to <span id="dynamic-text"></span></h1>
            <h2><span id="dynamic-text2"></span></h2>
            <p>Your ultimate destination for learning and success</p>
        </div>
    </div>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="public/homepage.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="public/homepage2.jpeg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="public/homepage3.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <br><br><br>

    <div class="video-container">
        <video width="640" height="360" controls>
            <source src="uploads/homepage.mkv" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <div class="container card-container">
        <div class="card">
            <img src="public/teacher.jpg" class="card-img-top" alt="Teacher">
            <div class="card-body">
                <h5 class="card-title">TEACHERS</h5>
                <p class="card-text">There are almost <%=tc%>+ teachers
                        involved here. They are experienced and the most relevant teachers;</p><a href="#"
                    class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        <div class="card">
            <img src="public/course.jpg" class="card-img-top" alt="Course">
            <div class="card-body">
                <h5 class="card-title">COURSES</h5>
                <p class="card-text">There are almost <%=cc%> courses
                        that are very helpful with their content.</p><a href="#" class="btn btn-primary">Go
                    somewhere</a>
            </div>
        </div>
        <div class="card">
            <img src="public/lecture.jpg" class="card-img-top" alt="Lecture">
            <div class="card-body">
                <h5 class="card-title">LECTURES</h5>
                <p class="card-text">Almost <%=lc%> quick example text to build on mental strength and make up the bulk
                        of the brain's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
        <div class="card">
            <img src="public/exam.jpg" class="card-img-top" alt="Explore">
            <div class="card-body">
                <h5 class="card-title">EXAM</h5>
                <p class="card-text">Almost <%=qc%> quick example exam to build on preparation and make up the bulk
                        of the book's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    </div>
    </div>

    <div class="student_card_container">
        <h1>Our Students</h1>
        <div class="student-grid-wrapper">
            <% for (let i = 0; i < 4; i++) { %>
                <div class="student-grid-container">
                    <!-- Repeat this card for each student in the current row -->
                    <% for (let j = i * Math.ceil(students.length / 4); j < Math.min((i + 1) * Math.ceil(students.length / 4), students.length); j++) { %>
                        <div class="card text-center">
                            <div class="circle-img">
                                <img src="public/<%= students[j].profilepiclink %>.jpeg" class="card-img-top rounded-circle"
                                    alt="<%= students[j].first_name %> <%= students[j].last_name %>">
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <%= students[j].first_name %> <%= students[j].last_name %>
                                </h6>
                            </div>
                        </div>
                    <% } %>
                </div>
                <br><br><br> <!-- Optional: Add spacing between rows -->
            <% } %>
        </div>
    </div>
    
    


    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Do you have an account?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>If you have an account, click "Yes" to log in, otherwise click "No" to register.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="loginYesBtn">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        const text = "STUDYMATE";
        const text2 = "Learn, Connect, Succeed";
        // Delay between each letter (in milliseconds)
        const delay = 100;
        // Get the span element where the text will be displayed
        const dynamicText = document.getElementById("dynamic-text");
        const dynamicText2 = document.getElementById("dynamic-text2");
        // Initialize an index to keep track of the current letter being displayed
        let index = 0;
        let index2 = 0;
        // Function to display the text letter by letter
        function displayText() {
            // Check if all letters have been displayed
            if (index < text.length) {
                // Add the next letter to the dynamicText element
                dynamicText.textContent += text.charAt(index);
                // Move to the next letter
                index++;
                // Call the function recursively after the specified delay
                setTimeout(displayText, delay);
            }
        }
        function displayText2() {
            // Check if all letters have been displayed
            if (index2 < text2.length) {
                // Add the next letter to the dynamicText element
                dynamicText2.textContent += text2.charAt(index2);
                // Move to the next letter
                index2++;
                // Call the function recursively after the specified delay
                setTimeout(displayText2, delay);
            }
        }
        // Start displaying the text
        displayText();
        setTimeout(displayText2, text.length * delay);
        // Add event listener to the login link
        document.addEventListener('DOMContentLoaded', function () {
            const loginLink = document.getElementById('login-link');
            if (loginLink) {
                loginLink.addEventListener('click', function () {
                    const modalElement = document.getElementById('loginModal');
                    if (modalElement) {
                        try {
                            const loginModal = new bootstrap.Modal(modalElement, {
                                keyboard: false,
                                backdrop: false // Adjust this configuration as needed
                            });
                            loginModal.show();
                        } catch (error) {
                            console.error('Error initializing modal:', error);
                        }
                    } else {
                        console.error('Modal element not found.');
                    }
                });
            } else {
                console.error('Login link element not found.');
            }
        });

        // Handle login Yes button click
        const loginYesBtn = document.getElementById('loginYesBtn');
        loginYesBtn.addEventListener('click', function () {
            // Redirect to login page
            // You can replace '#' with your actual login page URL
            window.location.href = 'login'; // Replace '#' with your actual login page URL
        });
    </script>


