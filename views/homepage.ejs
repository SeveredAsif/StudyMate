        }

        .btn:hover {
            background-color: #218838;
        }

        /* Flexbox to display cards side by side */
        .card-container {
            display: flex;
            justify-content: center;
            /* Center align the cards horizontally */
            gap: 20px;
            /* Add gap between cards */
            flex-wrap: wrap;
            /* Allow wrapping to the next line if needed */
        }

        .card {
            flex: 1;
            /* Each card takes equal space */
            max-width: 18rem;
