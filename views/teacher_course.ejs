<!-- teacher_course.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Courses</title>
    <!-- Add your stylesheets or other head elements here -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>

    <h1>Welcome, <%= Data[0].teacher_name %>!</h1>

    <div>
        <h2>Your Information:</h2>
        <ul>
            <li><strong>ID:</strong>
                <%= Data[0].teacher_id %>
            </li>
            <li><strong>Name:</strong>
                <%= Data[0].teacher_name %>
            </li>
            <li><strong>Proficiency:</strong>
                <%= Data[0].teacher_proficiency %>
            </li>
            <li><strong>Birth Date:</strong>
                <%= Data[0].teacher_birth_date.toISOString().split('T')[0] %>
            </li>
            <li><strong>Age:</strong>
                <%= Data[0].age %>
            </li>
            <li><strong>Last Login Date:</strong>
                <%= Data[0].last_uploaded.toISOString().split('T')[0] %>
            </li>
            <!-- Add other relevant information here -->
            <li><strong>Last Login Time:</strong>
                <%= Data[0].last_uploaded.toISOString().split('T')[1] %>
            </li>
            <li><strong>Your courses:</strong>
                <ul>
                    <li><strong>Your Have initiated :</strong></li>
                    <% for (let i=0; i < courses.length; i++) { %>
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="flush-headingOne">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#flush-collapseOne" aria-expanded="false"
                                        aria-controls="flush-collapseOne" style="background-color: rgb(230, 225, 219);">
                                        <%= courses[i].course_title %>
                                    </button>
                                </h2>
                                <div id="flush-collapseOne" class="accordion-collapse collapse"
                                    aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body">
                                        <%= courses[i].course_description %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>

                </ul>
            </li>


        </ul>
        <a href="/course/initiation">
            <button id="initiateBtn">Initiate Course</button>
        </a>

    </div>



</body>

</html>