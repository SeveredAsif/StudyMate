    <div class="navbar">
        <button onclick="window.location.href='/student/dashboard'">Home</button>
        <button onclick="window.location.href='/student/enroll-courses'">Enroll Courses</button>
        <button onclick="window.location.href='/student/course-lists'">Course Lists</button>
        <button onclick="window.location.href='/student/exam-section'">Exam Section</button>
        <button onclick="window.location.href='/student/mythingstodo'">My Things to Do</button>
