<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Lists</title>
    <!-- Custom CSS -->
    <style>
        /* Custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            padding: 20px;
            color: #333;
        }

        h1 {
            color: #1a237e;
            margin-bottom: 20px;
        }

        .course {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #fff;
        }

        .course-title {
            font-size: 1.2em;
            color: #1a237e;
            margin-bottom: 10px;
        }

        .course-description {
            color: #555;
            margin-bottom: 10px;
        }

        .teacher {
            font-weight: bold;
            color: #777;
        }

        .rating-badge {
            background-color: #fbc02d;
            color: #333;
            padding: 5px 10px;
            border-radius: 5px;
            margin-left: 10px;
        }

        /* Rating stars */
        .rating {
            unicode-bidi: bidi-override;
            direction: rtl;
            display: inline-block;
            position: relative;
            color: #fbc02d;
        }

        .rating>span {
            display: inline-block;
            position: relative;
            width: 1.1em;
            cursor: pointer; /* Add cursor pointer */
        }

        .rating>span:hover:before,
        .rating>span:hover~span:before {
            content: "\2605";
            position: absolute;
            color: #fbc02d;
        }

        button {
            background-color: #1a237e;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #283593;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Course Lists</h1>
        <% if (courses.length > 0) { %>
            <h2>Hi <%= courses[0].first_name %>!!!</h2>
            <% for (let i=0; i < courses.length; i++) { %>
                <div class="course">
                    <div class="course-title">
                        <%= courses[i].course_title %>
                        <% for (let j=0;j<rating.length;j++){%>
                            <% if (rating[j].course_id==courses[i].id) { %>
                                <span class="rating-badge">Rating: <%= rating[j].sum/rating[j].count %></span>
                            <% } %>
                        <% } %>
                    </div>
                    <div class="course-description">
                        <%= courses[i].course_description %>
                    </div>
                    <div class="teacher">
                        Teacher: <%= courses[i].teacher_name %>
                    </div>
                    <div class="mt-3">
                        <a href="/student/show/lecture?course_id=<%= courses[i].id %>">
                            <button>View Lectures</button>
                        </a>
                    </div>
                    <!-- Rating stars -->
                    <div class="mt-3">
                        <p>Rate this course:</p>
                        <div class="rating" data-course-id="<%= courses[i].id %>">
                            <!-- Initial stars -->
                            <% for (let j = 4; j >= 0; j--) { %>
                                <span data-rating="<%= j + 1 %>">&#9733;</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } else { %>
            <p>No courses enrolled.</p>
        <% } %>
    </div>

    <!-- Custom JavaScript -->
    <script>
        // Add event listener to rating stars
        document.querySelectorAll('.rating').forEach(item => {
            item.addEventListener('click', event => {
                const courseId = item.dataset.courseId;
                const rating = event.target.dataset.rating;
                console.log(`Rated course ${courseId} with ${rating} stars.`);
                // Send AJAX request to server to submit the rating
                // Implement AJAX request here
                const xhr = new XMLHttpRequest();
                xhr.open('POST', '/submit-rating', true);
                xhr.setRequestHeader('Content-Type', 'application/json');
                xhr.onreadystatechange = function() {
                    if (xhr.readyState === 4 && xhr.status === 200) {
                        console.log('Rating submitted successfully.');
                    }
                };
                xhr.send(JSON.stringify({ courseId: courseId, rating: rating }));
            });
        });
    </script>
</body>

</html>
