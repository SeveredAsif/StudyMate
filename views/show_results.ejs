<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam Results</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom Styles -->
    <style>
        /* Add your custom styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .table-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .navbar {
            background-color: #007bff;
            overflow: hidden;
            margin-bottom: 20px;
            max-width: 800px; /* Adjust the max-width of the navbar */
            margin-left: auto;
            margin-right: auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .navbar button {
            background-color: inherit;
            border: none;
            color: white;
            padding: 14px 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .navbar button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <div class="navbar">
        <button onclick="window.location.href='/student/dashboard'">Home</button>
        <button onclick="window.location.href='/exam_section/result'">Result</button>
        <button onclick="window.location.href='/exam_section/results'">Progress</button>
        <button onclick="window.location.href='/student/exam-section'">Exam Section</button>
        <button onclick="window.location.href='/leaderboard'">Leaderboard</button>
    </div>

    <div class="container">
        <h1>Exam Results</h1>
        <div class="table-container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Exam Topic</th>
                        <th>Correct Answers</th>
                        <th>Total Questions</th>
                        <th>Percentage</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach(row => { %>
                        <tr>
                            <td><%= row.course_title %></td>
                            <td><%= row.exam_topic %></td>
                            <td><%= row.correct_answers %></td>
                            <td><%= row.total_questions %></td>
                            <% const percentage = (row.correct_answers / row.total_questions) * 100; %>
                            <td><%= percentage.toFixed(2) %>%</td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
