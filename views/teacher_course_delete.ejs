<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .btn-yes {
            background-color: #28a745;
            color: #fff;
        }
        .btn-no {
            background-color: #dc3545;
            color: #fff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/teacher/dashboard">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/teacher/courses">Teaching Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teacher/lecture">Add Lecture</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/teacher/about">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center">Delete Course</h1>

        <h2 class="mt-4">Enrolled Students:</h2>
        <% if (enrolledstudents.length > 0) { %>
            <ul class="list-group">
                <% enrolledstudents.forEach(student => { %>
                    <li class="list-group-item"><%= student.first_name %> <%= student.last_name %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="mt-4">No students enrolled in this course.</p>
        <% } %>

        <h2 class="mt-4">Lectures:</h2>
        <% if (lecture.length > 0) { %>
            <ul class="list-group">
                <% lecture.forEach(lec => { %>
                    <li class="list-group-item"><%= lec.lecture_name %></li>
                <% }); %>
            </ul>
        <% } else { %>
            <p class="mt-4">No lectures found for this course.</p>
        <% } %>

        <h2 class="mt-4">Average Rating: <%= rating.avg %></h2>

        <div class="text-center mt-4">
            <p>Do you want to delete this course?</p>
            <a href="/teacher/delete/course/<%=courseId%>" class="btn btn-yes me-3">Yes</a>
            <a href="/teacher/courses" class="btn btn-no">No</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

