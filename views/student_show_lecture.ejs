<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Lectures</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .sidebar {
            width: 200px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-right: 1px solid #ddd;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            background-color: #f9f9f9;
            margin-bottom: 10px;
            padding: 15px;
            border-radius: 8px;
            cursor: pointer;
        }

        li:hover {
            background-color: #eaeaea;
        }

        .video-container {
            /* display: none; */
            margin-top: 10px;
        }

        iframe,
        video {
            width: 100%;
            height: 315px;
            border-radius: 8px;
        }

        .complete-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #FFD700; /* Yellow color */
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .complete-button.complete {
            background-color: #32CD32; /* Another color for completed */
        }

        button:hover {
            background-color: #DAA520; /* Darker yellow on hover */
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h1> <%= course.course_title %></h1>
        <ul>
            <% for (let i = 0; i < lectures.length; i++) { %>
                <li onclick="showDetails( `<%=i%>` )">
                    <%= lectures[i].lecture_name %>
                    
                </li>
            <% } %>
        </ul>
        <a href="/student/courselistsagain">
            <button>Back to Courses</button>
        </a>
    </div>

    <div class="main-content">
        <h1>Lecture for <%= course.course_title %></h1>
        <div id="lectureDetails">
            <!-- Lecture details will be displayed here -->
        </div>
    </div>

    <script>
        const lectures = JSON.parse('<%- JSON.stringify(lectures) %>');

        function showDetails(index) {
            console.log('details of the show');
            console.log(lectures);
            console.log(index);
            var lectureDetails = document.getElementById('lectureDetails');
            var lecture = lectures[index];
            console.log(lecture);

            console.log("Video Link:", lecture.videolink); // Log the video link

            lectureDetails.innerHTML = `
                <h2>Lecture: ${lecture.lecture_name}</h2>
                <p><strong>Description:</strong> ${lecture.description}</p>
                <div class="video-container">
                ${lecture.videolink.includes('youtube.com') || lecture.videolink.includes('youtu.be') ?
                `<iframe width="560" height="315" src="${lecture.videolink.replace('watch?v=', 'embed/')}" frameborder="0" allowfullscreen></iframe>` :
                `<video controls>
                    <source src="/uploads/${lecture.videolink}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <button class="complete-button" onclick="completeLecture(event, ${lecture.lecture_id})">Complete</button>`}
                </div> 
            `;
        }

    function completeLecture(event, lectureId) {
    event.stopPropagation(); // Prevent the li onclick event from firing
    const button = event.target;
    if (!button.classList.contains('complete')) {
        button.classList.add('complete');
        button.textContent = 'Repeat Now';
        // Send AJAX request to insert into the database
        fetch('/complete-lecture', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ lectureId })
        })
        .then(response => {
            if (response.ok) {
                console.log('Lecture completed and inserted into the database.');
            } else {
                console.error('Failed to complete lecture and insert into the database.');
            }
        })
        .catch(error => {
            console.error('Error completing lecture and inserting into the database:', error);
        });
    }
}

    </script>

</body>

</html>


