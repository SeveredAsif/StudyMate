<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Lectures</title>
    <style>
        /* Reset CSS */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        /* Container Styles */
        .container {
            display: flex;
            max-width: 1200px;
            width: 100%;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            padding: 20px;
        }

        .sidebar h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .sidebar li {
            padding: 10px 0;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .sidebar li:hover {
            background-color: #495057;
        }

        .sidebar a {
            color: #fff;
            text-decoration: none;
        }

        .sidebar button {
            display: block;
            width: 100%;
            padding: 10px;
            margin-top: 20px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .sidebar button:hover {
            background-color: #0056b3;
        }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        .main-content h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .lecture-details {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .lecture-details h2 {
            margin-bottom: 10px;
        }

        .video-container {
            margin-top: 20px;
        }

        .video-container iframe,
        .video-container video {
            width: 100%;
            border-radius: 8px;
        }

        .pdf-container {
            margin-top: 20px;
            padding: 20px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .pdf-container iframe {
            width: 100%;
            height: 500px;
            border: none;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="sidebar">
            <h1>
                <%= course.course_title %>
            </h1>
            <ul>
                <% for (let i=0; i < lectures.length; i++) { %>
                    <li onclick="showDetails('<%=i%>')">
                        <%= lectures[i].lecture_name %>
                    </li>
                    <% } %>
            </ul>
            <a href="/student/courselistsagain">
                <button>Back to Courses</button>
            </a>
        </div>

        <div class="main-content">
            <h1>Lecture for <%= course.course_title %>
            </h1>
            <div id="lectureDetails" class="lecture-details">
                <!-- Lecture details will be displayed here -->
            </div>
        </div>
    </div>

    <script>
        const lectures = JSON.parse('<%- JSON.stringify(lectures) %>');

        function showDetails(index) {
            var lectureDetails = document.getElementById('lectureDetails');
            var lecture = lectures[index];

            lectureDetails.innerHTML = `
                <h2>Lecture: ${lecture.lecture_name}</h2>
                <p><strong>Description:</strong> ${lecture.description}</p>
                <div class="video-container">
                ${lecture.videolink.includes('youtube.com') || lecture.videolink.includes('youtu.be') ?
                    `<iframe width="560" height="315" src="${lecture.videolink.replace('watch?v=', 'embed/')}" frameborder="0" allowfullscreen></iframe>` :
                    `<video controls>
                    <source src="${lecture.videolink}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                `}
                </div> 
            `;

            if (lecture.pdflink) {
                lectureDetails.innerHTML += `
                <iframe src="${lecture.pdflink}" frameborder="0"></iframe>`;
            } else {
                lectureDetails.innerHTML += `
                    <div class="pdf-container">
                        <strong>Lecture Files :</strong>
                        No Pdf File Available 
                    </div>`;
            }
        }

